<%- include('./partials/header') %>
<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center">
			<h2>Registration</h2>
		</div>
		<div class="col-md-push-3 col-md-6 col-xs-12">
			<%- include('./partials/messagebox', {
				shownMessages: shownMessages
			}) %>
			<!--<form method="POST">-->
				<div class="form-group <%= nameMissing ? 'has-error' : '' %> has-feedback">
					<label for="name">Name</label><span class="required-field"> *</span>
					<input type="text" class="form-control" name="name" id="name" placeholder="Name" required autofocus="true">
					<% if (nameMissing) { %>
						<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
						<div class="help-block with-errors">Please fill out this field.</div>
					<% } %>
				</div>

				<label for="occupation">Occupation</label>
				<div class="input-group form-group">
					<div class="input-group-btn">
						<button type="button" id="btn123" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Select... <span class="caret"></span></button>
						<ul id="occupationsList" class="dropdown-menu">
							<% occupations.forEach(function (occ) { -%>
								<li><a data-target="#" onclick="$('#occupation').val($(this).text())"><%= occ %></a></li>
							<% }) -%>
						</ul>
					</div>
					<input type="text" class="form-control" name="occupation" id="occupation" placeholder="... or enter occupation" onkeyup="this.value=autoComplete(event,this.value)">
				</div>

				<div class="form-group <%= emailMissing ? 'has-error' : '' %> has-feedback">
					<label for="email">Email</label><span class="required-field"> *</span>
					<input type="text" class="form-control" name="email" id="email" placeholder="Email address" required>
					<% if (emailMissing) { %>
						<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
						<div class="help-block with-errors">Please fill out this field.</div>
					<% } %>
				</div>

				<div class="form-group">
					<label for="birthday">Birthday</label>
					<div class="row">
						<div class="col-md-6">
							<div id="birthdaypicker"></div>
						</div>
						<div class="col-md-6">
							<input type="hidden" name="birthday" id="birthday">
						</div>
					</div>
				</div>

				<input type="submit" class="btn btn-primary" value="Register"/>

				<div class="row">&nbsp;</div>

			<!--</form>-->
		</div>
	</div>
</div>

<%- include('./partials/footer') %>
